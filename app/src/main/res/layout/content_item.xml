<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/size_10"
    android:paddingStart="@dimen/size_10">

    <AutoCompleteTextView
        android:id="@+id/type_of_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/size_20"/>

    <AutoCompleteTextView
        android:id="@+id/no_of_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="text2"
        app:layout_constraintStart_toEndOf="@+id/type_of_item"
        android:layout_marginEnd="@dimen/size_50"
        android:layout_marginStart="@dimen/size_30"/>

    <AutoCompleteTextView
        android:id="@+id/rate_of_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="text3"
        app:layout_constraintStart_toEndOf="@+id/no_of_items"
        android:layout_marginEnd="@dimen/size_50"
        android:layout_marginStart="@dimen/size_30"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:text="price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="0.5"
        tools:layout_editor_absoluteY="13dp" />

</androidx.constraintlayout.widget.ConstraintLayout>